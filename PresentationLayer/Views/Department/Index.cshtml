@model IEnumerable<Models.Department>

@{
    ViewData["Title"] = "Index";
}


<style>
    .container {
        margin-top: 50px;
    }

    .department-table {
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .department-table-title {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .department-table th,
    .department-table td {
        padding: 12px;
        border-bottom: 1px solid #dee2e6;
        text-align: center;
    }

    .department-table th {
        color: #555;
    }

    .department-table td {
        color: #333;
    }

    .department-table img {
        max-width: 50px;
        height: auto;
        border-radius: 50%;
    }
</style>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="department-table">
                <h1 class="text-center my-4">Departments</h1>
                <!-- تصميم زر الإنشاء -->
                <div class="text-center mb-4">
                    <a asp-action="Create" class="btn btn-lg btn-success">Create New Department</a>
                </div>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Manger</th>
                            <th class="col-3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Manager</td>
                                <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

