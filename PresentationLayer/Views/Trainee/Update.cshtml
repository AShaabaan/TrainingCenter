@model Trainee


<form method="post" asp-action="Update" asp-controller="Trainee" asp-route-id="@Model.Id">
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control" />
    </div>  
    <div>
        <label asp-for="Address">Address</label>
        <input asp-for="Address" value="@Model.Address" class="form-control" />
    </div>
    <div>
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file"  class="form-control" />
    </div>
   
    <div>
        <label asp-for="Department">Department</label>
        @*<input type="number" name="Dept_Id" id="Dept_Id" value="@Model.Dept_Id" class="form-control" />*@
        <select asp-for="Dept_ID" class="form-control">
            @foreach (var deptItem in ViewBag.DeptList)
            {
                if (Model.Dept_ID == deptItem.Id)
                {
                    <option value="@deptItem.Id" selected >@deptItem.Name</option>
                }
                else
                {
                    <option value="@deptItem.Id">@deptItem.Name</option>
                }
            }
        </select>
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}