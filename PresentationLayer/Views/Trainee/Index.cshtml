@using Models
@model List<Trainee>

<style>
    .container {
        margin-top: 50px;
    }

    .trainee-table {
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .trainee-table-title {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .trainee-table th,
    .trainee-table td {
        padding: 12px;
        border-bottom: 1px solid #dee2e6;
        text-align: center;
    }

    .trainee-table th {
        color: #555;
    }

    .trainee-table td {
        color: #333;
    }

    .trainee-table img {
        max-width: 50px;
        height: auto;
        border-radius: 50%;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="trainee-table">
                <h1 class="trainee-table-title">Trainees List</h1>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Department</th>
                            <th>Image</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.Department.Name</td>
                                <td><img src="@item.Image" alt="Trainee Image"></td>
                                <td><a class="btn btn-info" href="/Trainee/Details/@item.Id">Details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
