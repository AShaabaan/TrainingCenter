@model Instractor

<style>
    .container {
        margin-top: 50px;
    }

    .instructor-details {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        padding: 30px;
    }

    .instructor-details-title {
        font-size: 24px;
        color: #333333;
        margin-bottom: 20px;
    }

    .details-table {
        width: 100%;
    }

        .details-table th,
        .details-table td {
            padding: 10px;
            border-bottom: 1px solid #e0e0e0;
        }

        .details-table th {
            text-align: left;
            color: #555555;
        }

        .details-table td {
            color: #333333;
        }

    .instructor-image {
        max-width: 100px;
        height: auto;
        display: block;
        margin: 0 auto;
        border-radius: 5px;
        margin-bottom: 20px;
        text-align:center;
    }
</style>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="instructor-details">
                <h1 class="instructor-details-title text-center">Instructor Details</h1>
                <img src="~/wwwroot/InstructorsImages/@Model.Image" alt="Instructor Image" class="instructor-image">
                <table class="details-table">
                    <tr>
                        <th>Id</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Salary</th>
                        <td>@Model.Salary</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
